{
  "settingsSync.keybindingsPerPlatform": true,
  "settingsSync.ignoredExtensions": [
  ],

  // TEMA VISUAL PARA EL EDITOR
  "workbench.colorTheme": "GitHub Dark Dimmed",
  // NAVEGADOR POR DEFECTO PARA LIVE SERVER
  "liveServer.settings.CustomBrowser": "chrome",
  // IDENTACION
  "editor.tabSize": 2,
  // ZOOM DEL EDITOR 
  "window.zoomLevel": 1,
  // SI EL CODIGO ES DEMASIADO LARGO, BAJARA PERO SIN CAMBIAR DE NUMERO DE LINEA
  "editor.wordWrap": "on",
  // EMMET CONFIG
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.useInlineCompletions": true,
  "emmet.triggerExpansionOnTab": true,
  // EMMET AHORA FUNCIONA EN ARCHIVOS JS/REACT Y ASTRO
  "emmet.includeLanguages": {
      "javascript": "javascriptreact",
      "astro": "html"
  },
  // PARA OBTENER MEJORA VISUAL DE LOS ICONOS POR DEFECTO
  "workbench.iconTheme": "material-icon-theme",
  // PARA DAR LAS LIGADURAS A LA FUENTE CASCADIA CODE
  "editor.fontLigatures": true,
  // LAS FUENTES A USAR EN EL EDITOR
  "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace"

}